<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@color/whiteDN"
    android:paddingTop="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/corner_top"
        android:backgroundTint="@color/background_theme"
        android:paddingStart="15dp"
        android:paddingBottom="5dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_above="@id/app_name"
            android:layout_alignParentStart="true"
            android:src="@drawable/oknew" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_header_title"
            android:textSize="20sp"
            android:layout_alignParentStart="true"
            android:layout_above="@id/menu_slogan"
            android:fontFamily="@font/bungee"
            android:textColor="@color/blackDN"/>

        <TextView
            android:id="@+id/menu_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:text="@string/menu_header_text"
            android:textColor="@color/blackDN" />

    </RelativeLayout>
</RelativeLayout>