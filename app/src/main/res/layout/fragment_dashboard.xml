                                android:orientation="vertical"
                                android:padding="5dp">

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/chair" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
